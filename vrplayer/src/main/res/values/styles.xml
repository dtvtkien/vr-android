<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SeekBarTheme" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/colorPrimaryDark</item>
        <item name="android:progressTint">@color/white</item>
        <item name="android:colorControlActivated">@color/white</item>
        <item name="android:thumbTint">@color/white</item>
    </style>

    <style name="MediaControllerTextTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
